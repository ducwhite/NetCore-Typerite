<script type="text/javascript">
    $(document).ready(function() {
        $("#btnSubmit").click(function() {
            if ($('#fullname').val() === "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'The Full Name field is required!',
                })
            }
            else if ($('#email').val() === "" ) {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'The Email field is required!',
                })
            }
            else if ($('#message').val() === "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'The Message field is required!',
                })
            }
            else {
                Swal.fire({
                    icon: 'success',
                    title: 'Done',
                    text: 'Thank you, we have received your message!',
                    timer: 3000
                })
            }
        })
    })
</script>

